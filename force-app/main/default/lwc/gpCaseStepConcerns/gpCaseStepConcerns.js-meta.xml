<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__FlowScreen</target>
        <target>lightning__HomePage</target>

        <!-- Acción rápida moderna (válida para LWC) -->
        <target>lightning__RecordAction</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Case</object>
                <object>Contact</object>
            </objects>
            <supportedFormFactors>
                <supportedFormFactor type="Large"/>
                <supportedFormFactor type="Small"/>
            </supportedFormFactors>
            <property name="layoutMode" type="Boolean" label="Layout mode (hide navigation, load/save concerns for record)" default="false"/>
            <property name="layoutContext" type="String" label="Layout context" datasource="auto,case,relatedCase,patient" default="auto"/>
        </targetConfig>
        <targetConfig targets="lightning__RecordAction">
            <objects>
                <object>Case</object>
            </objects>
        </targetConfig>
        <targetConfig targets="lightning__AppPage, lightning__HomePage">
            <property name="layoutMode" type="Boolean" label="Layout mode (hide navigation, load/save concerns for record)" default="false"/>
            <property name="layoutContext" type="String" label="Layout context" datasource="auto,case,relatedCase,patient" default="auto"/>
        </targetConfig>
      
    </targetConfigs>
</LightningComponentBundle>
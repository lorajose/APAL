<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>60.0</apiVersion>
    <isExposed>true</isExposed>

    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="caseType" type="String" label="Case Type" description="Used to filter catalog"/>
            <property name="required" type="Boolean" label="Required" default="false"/>
            <property name="disabled" type="Boolean" label="Disabled" default="false"/>
        </targetConfig>

        <targetConfig targets="lightning__FlowScreen">
            <property name="caseType" type="String" label="Case Type"/>
            <property name="required" type="Boolean" label="Required" default="false"/>
            <property name="disabled" type="Boolean" label="Disabled" default="false"/>

            <!-- Si lo usas directo en Flow: -->
            <property name="value" type="String" role="inputOnly" label="Selected PCQT Ids (JSON array)"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>